{
  "name": "apex-tradebill",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev:mobile": "pnpm --filter @apex-tradebill/mobile start",
    "dev:api": "pnpm --filter @apex-tradebill/api dev",
    "build": "pnpm -r build",
    "lint": "eslint --config configs/eslint/eslint.config.cjs --ext .ts,.tsx,.js .",
    "lint:fix": "eslint --config configs/eslint/eslint.config.cjs --ext .ts,.tsx,.js . --fix",
    "format": "prettier --config .prettierrc.cjs --write \"**/*.{cjs,js,ts,tsx,jsx,json,md}\"",
    "format:check": "prettier --config .prettierrc.cjs --check \"**/*.{cjs,js,ts,tsx,jsx,json,md}\"",
    "typecheck": "pnpm -r --if-present typecheck",
    "test": "pnpm -r test --if-present",
    "test:api": "pnpm --filter @apex-tradebill/api test",
    "test:mobile": "pnpm --filter @apex-tradebill/mobile test",
    "security:audit": "pnpm audit --prod --dev",
    "security:openapi": "pnpm dlx @stoplight/spectral-cli lint specs/001-develop-apex-tradebill/contracts/openapi.yaml -r configs/security/.spectral.yaml",
    "security:scan": "pnpm run security:audit && pnpm run security:openapi"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.0",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@jest/types": "^29.6.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.3.3"
  }
}
