{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@mobile/*": ["apps/mobile/*"],
      "@api/*": ["apps/api/src/*"],
      "@packages/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
