# Database
SUPABASE_DB_URL=postgresql://postgres:postgres@127.0.0.1:5432/apex_tradebill?sslmode=disable
SUPABASE_DB_POOL_MIN=1
SUPABASE_DB_POOL_MAX=5
SUPABASE_DB_IDLE_TIMEOUT_MS=30000

# Authentication
JWT_SECRET=dev-secret-change-me-please
#JWT_ISSUER=apex-tradebill
#JWT_AUDIENCE=apex-tradebill-clients
APEX_TRADEBILL_AUTH_ALLOW_GUEST=true

# Local-only fallbacks (disable in production)
APEX_ALLOW_IN_MEMORY_DB=true
APEX_ALLOW_IN_MEMORY_MARKET_DATA=true

# ApeX Omni API
APEX_OMNI_API_KEY=demo-key-123
APEX_OMNI_API_SECRET=demo-secret-xyz
APEX_OMNI_API_PASSPHRASE=demo-passphrase
APEX_OMNI_ENVIRONMENT=prod
APEX_OMNI_REST_URL=https://api.pro.apex.exchange
APEX_OMNI_WS_URL=wss://stream.pro.apex.exchange
APEX_OMNI_TESTNET_REST_URL=https://testnet.omni.apex.exchange/api/
APEX_OMNI_TESTNET_WS_URL=wss://testnet.omni.apex.exchange/ws/v1

# Google Secret Manager (production-only)
# Required IAM roles:
# - API service account: roles/secretmanager.secretAccessor
# - Operator identities: roles/secretmanager.admin
GCP_PROJECT_ID=your-prod-gcp-project
OMNI_BREAKGLASS_PUBLIC_KEY=base64-encoded-public-key
OMNI_BREAKGLASS_PRIVATE_KEY=base64-encoded-private-key
OMNI_CACHE_TTL_SECONDS=300
# Allow using the "latest" version alias when reading GSM secrets (default true)
OMNI_ALLOW_LATEST_VERSION=true
