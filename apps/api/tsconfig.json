{
  "extends": "@apex-tradebill/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/*"],
      "@api/domain/*": ["src/domain/*"],
      "@api/adapters/*": ["src/adapters/*"],
      "@api/config/*": ["src/config/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../../packages/types/tsconfig.json" },
    { "path": "../../packages/utils/tsconfig.json" }
  ]
}
