{
  "name": "@apex-tradebill/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --config ../../configs/eslint/.eslintrc.cjs --ext .ts .",
    "test": "jest --passWithNoTests",
    "migrate": "tsx src/scripts/runMigrations.ts",
    "db:check": "tsx src/scripts/checkDbConnection.ts"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@apex-tradebill/types": "workspace:*",
    "@apex-tradebill/utils": "workspace:*",
    "apexomni-connector-node": "0.3.1-alpha.2",
    "decimal.js-light": "^2.5.1",
    "fastify": "^5.0.0",
    "pg": "^8.11.5",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.12",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.15.0",
    "typescript": "^5.9.0"
  }
}
