{
  "name": "@apex-tradebill/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --config ../../configs/eslint/eslint.config.cjs --ext .ts .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "migrate": "tsx src/scripts/runMigrations.ts",
    "db:check": "tsx src/scripts/checkDbConnection.ts",
    "db:seed:omni-secrets": "tsx src/scripts/seedOmniSecrets.ts",
    "auth:issue-device-code": "tsx src/scripts/issueDeviceCode.ts",
    "breakglass:omni": "tsx src/scripts/breakglassOmni.ts",
    "security:secrets": "pnpm dlx gitleaks@8.18.1 detect --source . --no-banner --redact",
    "security:audit": "pnpm audit --prod --dev",
    "security:scan": "pnpm run security:secrets && pnpm run security:audit"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@apex-tradebill/types": "workspace:*",
    "@apex-tradebill/utils": "workspace:*",
    "@google-cloud/secret-manager": "^5.5.0",
    "apexomni-connector-node": "0.3.1-alpha.2",
    "decimal.js-light": "^2.5.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.11.5",
    "prom-client": "^15.1.2",
    "tweetnacl-ts": "^1.0.3",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.12",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.15.0",
    "typescript": "^5.9.0"
  }
}
